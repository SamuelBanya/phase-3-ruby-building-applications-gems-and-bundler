# frozen_string_literal: true

source "https://rubygems.org"

# gem "rails"

gem "rspec"
gem "rest-client"
gem "hashie"
gem "sinatra", "2.0.2"
gem "octokit", "~> 2.0"
gem "awesome_print", git: 'git@github.com:awesome-print/awesome_print.git'

# NOTE: This was terribly worded in the 'learn test' results itself but this is using the 'hash'
# argument aka the ':group' keyword to specify that we only want the 'pry' gem for our 'development'
# portion of our app:
gem "pry", :group => "development"


group :test do
  gem "rspec"
end
